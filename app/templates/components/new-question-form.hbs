<h1>New Question</h1>
   <div class="container">
     <form>
    
           <div class="form-group">
             <label for="user">User Name</label>
             {{input class="form-control" value=user id="user"}}
           </div>

           <div class="form-group">
             <label for="question">Question</label>
             {{input class="form-control" value=question id="question"}}
           </div>

           <div class="form-group">
             <label for="details">Details</label>
             {{textarea class="form-control" rows="20" value=details id="details"}}
           </div>

       <button style="border-width: thick; background-color:gray; color:white;" {{action 'save'}}>Save</button>
     </form>
   </div>