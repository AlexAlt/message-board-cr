{{yield}}

{{#if updateQuestionForm}}

<h3>Edit Your Question</h3>
   <div class="container">
     <form>
           <div class="form-group">
             <label for="questionInput">Question</label>
             {{input class="form-control" value=questionInput id="questionInput"}}
           </div>

           <div class="form-group">
             <label for="details">Details</label>
             {{textarea class="form-control" rows="20" value=details id="details"}}
           </div>

       <button style="border-width: thick; background-color:gray; color:white;" {{action 'updateQuestion' question}}>Save</button>
     </form>
   </div>

{{else}}

  <button class="btn btn-default btn-xs" {{action 'updateQuestionFormShow'}}>Edit your question</button>
{{/if}}
