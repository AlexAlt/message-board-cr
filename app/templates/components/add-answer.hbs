{{yield}}

{{#if addAnswerForm}}
<h3>Answer This Question</h3>
   <div class="container">
     <form>
    
           <div class="form-group">
             <label for="user">User Name</label>
             {{input class="form-control" value=user id="user"}}
           </div>

           <div class="form-group">
             <label for="answerInput">Answer</label>
             {{textarea class="form-control" rows="20" value=answerInput id="answerInput"}}
           </div>



       <button style="border-width: thick; background-color:gray; color:white;" {{action 'saveAnswer' answer}}>Submit</button>
     </form>
   </div>
{{else}}
  <button class="btn btn-primary " {{action 'addAnswerFormShow'}}>Answer This Question</button>
{{/if}}